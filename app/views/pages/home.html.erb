<div class= "homepage" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1524413840807-0c3cb6fa808d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80);">
  <%= render 'pages/navbar' %>
  <div class="box">
    <h1>Book unique places to stay and things to do.</h1>
    <div class="search-form-control form-group">
      <div class="bar">
        <label for="check-in">WHERE</label>
        <%= form_tag apartments_path, method: :get do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a city"%>
        <div class="bar">
          <label for="check-in">CHECK-IN</label>
          <input class="form-control string required" type="text" name="search[query]" id="search_query" />
        </div>
        <div class="bar">
          <label for="guests">GUESTS</label>
          <input class="form-control string required" type="text" name="search[query]" id="search_query" />
        </div>
        <%= submit_tag "Search", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

