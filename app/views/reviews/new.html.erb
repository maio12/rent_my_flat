

<h1>Add a review for <%= @reservation.apartment.title %></h1>


<%= simple_form_for [@reservation,@review], url: reservation_reviews_path, action: :post do |f| %>
  <%= f.input :rating, as: :select, collection: Review::RATINGS %>
  <%= f.text_field :content %>
  <%= f.submit "add review", class: "btn btn-primary" %>
<% end %>
