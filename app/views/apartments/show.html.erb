<div class="show-start">
  <h3><%= @apartment.title %></h3>
  <p><%= "#{@apartment.address}, #{@apartment.city}" %></p>
</div>

<div class="show-img">
  <%= image_tag @apartment.photo_url %>
</div>

<div class="show-info">
  <div class="show-text">
    <div class="show-info1">
      <p class="lodge"> <%= "Private apartment hosted by #{@apartment.user.first_name}" %></p>
      <p> 6 guests · 3 bedrooms · 3 beds </p>
    </div>
    <div class="show-info2">
      <div class="show-info-specs">
        <p class="show-info-black"><i class="fas fa-home"></i>Great check-in experience</p>
        <p class="show-info-grey">100% of recent guests gave the check-in process a 5-star rating.</p>
      </div>
      <div class="show-info-specs">
        <p class="show-info-black"><i class="fas fa-comments"></i>Great communication</p>
        <p class="show-info-grey">100% of recent guests rated Ahmed 5-star in communication.</p>
      </div>
      <div class="show-info-specs">
        <p class="show-info-black"><i class="fas fa-heart"></i>Outstanding hospitality</p>
        <p class="show-info-grey">9 recent guests complimented Ahmed for outstanding hospitality.</p>
      </div>
    </div>
    <div class="show-info-cards">
      <div class="show-info-card">
        <div class="show-content">
          <i class="fas fa-bed"></i>
          <p class="show-info-bold">Bedroom 1</p>
          <p>1 double bed</p>
        </div>
      </div>
      <div class="show-info-card">
        <div class="show-content">
          <i class="fas fa-bed"></i>
          <p class="show-info-bold">Bedroom 2</p>
          <p>1 double bed</p>
        </div>
      </div>
      <div class="show-info-card">
        <div class="show-content">
          <i class="fas fa-bed"></i>
          <p class="show-info-bold">Bedroom 3</p>
          <p>1 double bed</p>
        </div>
      </div>
    </div>
     <div class= "show-info-reviews">
      <h3>Reviews</h3>
      <% @apartment.reviews.each do |rev| %>
        <p>Rating</p>
        <% rev.rating.times do %>
         <i class="fas fa-star"></i>
         <% end %>
        <p>Comment</p>
        <p><%= rev.content %></p>
      <% end %>
    </div>
  </div>

  <div class="show-price">
    <p><%= @apartment.price %></p>
    <%= link_to "Reserve", new_apartment_reservation_path(@apartment) , class: "btn-book btn-primary" %>
  </div>
</div>

<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
